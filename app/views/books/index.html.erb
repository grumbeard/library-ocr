<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<ul>
  <% @books.each do |book| %>
    <li>
      <%= link_to book do %>
        <%= book.title %>
      <% end %>
    </li>
  <% end %>
</ul>

<div id="add-book-btn" class="btn">
  Add Book
</div>

<%= form_with model: @book, html: {class: "hide", id: "add-book-form"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :book %>
  <%= f.file_field :content %>
  <%= f.hidden_field :content, value: f.object.content.signed_id if f.object.content.attached? %>
  <%= f.submit 'Add Book' %>
<% end %>
